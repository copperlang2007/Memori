# Memori Deployment Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# OpenAI Configuration (Required)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# Memori Configuration
# =============================================================================

# Database Connection String
# SQLite (default): sqlite:///memori.db
# PostgreSQL: postgresql://user:password@localhost:5432/memori
# MySQL: mysql://user:password@localhost:3306/memori
MEMORI_DATABASE__CONNECTION_STRING=sqlite:///data/memori.db

# Memory Namespace (optional, useful for multi-tenant setups)
MEMORI_MEMORY__NAMESPACE=production

# Memori Agent Configuration (set to the same value as OPENAI_API_KEY above)
MEMORI_AGENTS__OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# Demo-Specific API Keys
# =============================================================================

# Researcher Agent - Web Search API Key
# Get from: https://tavily.com/
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# Alternative Search API
# Get from: https://exa.ai/
EXA_API_KEY=your-exa-api-key-here

# =============================================================================
# Database Configuration (Production)
# =============================================================================

# PostgreSQL (Production recommended)
# POSTGRES_USER=memori
# POSTGRES_PASSWORD=secure-password-here
# POSTGRES_DB=memori_production
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# MySQL (Alternative)
# MYSQL_USER=memori
# MYSQL_PASSWORD=secure-password-here
# MYSQL_DATABASE=memori_production
# MYSQL_HOST=localhost
# MYSQL_PORT=3306

# =============================================================================
# Streamlit Configuration
# =============================================================================

# Server settings (usually handled by .streamlit/config.toml)
# STREAMLIT_SERVER_PORT=8501
# STREAMLIT_SERVER_ADDRESS=0.0.0.0
# STREAMLIT_SERVER_HEADLESS=true

# =============================================================================
# Docker Configuration
# =============================================================================

# Compose project name
COMPOSE_PROJECT_NAME=memori

# =============================================================================
# Monitoring and Logging (Optional)
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# =============================================================================
# Security
# =============================================================================

# Secret key for session management (generate with: openssl rand -hex 32)
# SECRET_KEY=your-secret-key-here

# Allowed hosts (comma-separated)
# ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# =============================================================================
# Cloud Provider Specific (if deploying to cloud)
# =============================================================================

# AWS
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# Google Cloud
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# GCP_PROJECT_ID=your-project-id

# Azure
# AZURE_STORAGE_ACCOUNT=your-storage-account
# AZURE_STORAGE_KEY=your-storage-key

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode (don't use in production!)
# DEBUG=false

# Enable live reload for documentation
# LIVE_RELOAD=true
